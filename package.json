{
    "name": "nenyoswebsite",
    "version": "0.1.0",
    "private": true,
    "main": "./backend/app.js",
    "scripts": {
        "start": "cd backend && node ./backend/app.js",
        "server": "cd backend && nodemon ./backend/app.js --ignore client ",
        "client": "npm run start --prefix client",
        "all": "npm-run-all --parallel server client",
        "iall": "cd backend && npm i --force && cd client && npm i --force && cd"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "eslint-plugin-react": "7.28.0",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5"
    },
    "dependencies": {
        "eslint-config-react-app": "^7.0.0",
        "http-errors": "^2.0.0"
    }
}
